<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ma_constraintLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_ma_list">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ma_topLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true">
        <ImageView
            android:id="@+id/ma_logout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/ma_loout_long"/>
        <ImageView
            android:id="@+id/ma_update"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/ma_logout"
            app:layout_constraintRight_toLeftOf="@id/ma_batu_ham"
            app:layout_constraintLeft_toRightOf="@id/ma_logout"
            app:srcCompat="@drawable/ma_update"/>
        <ImageView
            android:id="@+id/ma_batu_ham"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/ma_update"
            app:layout_constraintBottom_toBottomOf="@id/ma_update"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/ma_animation_batu10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/ma_camera_stroke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ma_topLayout"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/ma_aim" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:id="@+id/ma_camera_stroke"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ma_scan"
        app:layout_constraintTop_toTopOf="@id/ma_scan"
        app:srcCompat="@drawable/ma_button_stroke"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/ma_scan"
        app:layout_constraintLeft_toLeftOf="@id/ma_camera_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/ma_scan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:textSize="33dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/ma_camera_stroke"
        app:layout_constraintTop_toTopOf="@id/ma_camera_stroke"
        app:layout_constraintLeft_toRightOf="@id/ma_scan"
        app:layout_constraintRight_toRightOf="@id/ma_camera_stroke"
        app:layout_constraintHorizontal_bias="0.3"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:id="@+id/ma_qrcode_stroke"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ma_camera_stroke"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ma_button_stroke"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/ma_qrcode"
        app:layout_constraintBottom_toBottomOf="@id/ma_qrcode_stroke"
        app:layout_constraintTop_toTopOf="@id/ma_qrcode_stroke"
        app:layout_constraintLeft_toLeftOf="@id/ma_qrcode_stroke"
        app:srcCompat="@drawable/ma_qrcode2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/ma_qrcode_stroke"
        app:layout_constraintTop_toTopOf="@id/ma_qrcode_stroke"
        app:layout_constraintLeft_toRightOf="@id/ma_qrcode"
        app:layout_constraintRight_toRightOf="@id/ma_qrcode_stroke"
        app:layout_constraintHorizontal_bias="0.3"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/ma_info"
        app:layout_constraintTop_toBottomOf="@id/ma_qrcode_stroke"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ma_info" />

</androidx.constraintlayout.widget.ConstraintLayout>